                        <label for="" class="contact-label">Your email</label>
                        <input type="text" class="input-main input-contact" placeholder="Enter Your Email">
                        <label for="" class="contact-label">Your Message</label>
                        <textarea type="text" class="input-main input-contact" rows=5 cols=30 placeholder="Enter your Message"></textarea>
                        <button type="submit" class="btn btn-primary contact-btn">Submit</button>
                    </form>
                </div>
